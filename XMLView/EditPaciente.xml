<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" order="100" numcolumns="1">
                <widget type="text" fieldname="codcliente" readonly="true" onclick="EditCliente"/>
            </column>
            <column name="name" order="110" numcolumns ="3">
                <widget type="text" fieldname="nombre" readonly="true" />
            </column>
            <column name="birth-date" numcolumns="1" order="120">
                <widget type="date" fieldname="nacimiento" readonly="true" />
            </column>
            <column name="edad" numcolumns="1" order="120">
                <widget type="text" fieldname="edad" readonly="true" />
            </column>
            <column name="insurance" order="130" numcolumns="2">
                <widget type="select" fieldname="codgrupo" readonly="true">
                    <values source="gruposclientes" fieldcode="codgrupo" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="phone" numcolumns="1" order="140">
                <widget type="text" fieldname="telefono1" readonly="true" />
            </column>
            <column name="email" order="150" numcolumns="3" display="none">
                <widget type="text" fieldname="email" readonly="true" />
            </column>
            <column name="NIF" order="160" numcolumns="1">
                <widget type="text" fieldname="nif" readonly="true" />
            </column>
        </group>

        <group name="data2" numcolumns="12">
            <column name="allergies" order="160" >
                <widget type="textarea" fieldname="alergias" rows="3"/>
            </column>
            <column name="ophthalmological-history" order="170" >
                <widget type="textarea" fieldname="antecedentes_oftalmologicos" rows="3"/>
            </column>
            <column name="personal-history" order="180" >
                <widget type="textarea" fieldname="antecedentes_personales" rows="3"/>
            </column>
            <column name="family-history" order="190" >
                <widget type="textarea" fieldname="antecedentes_familiares" rows="3"/>
            </column>
        </group>

        <group name="data3" numcolumns="12">
            <column name="observations" order="200" >
                <widget type="textarea" fieldname="observaciones" rows="2"/>
            </column>
        </group>
    </columns>
</view>