<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="codcliente" />
            </column>
            <column name="insurance-company" order="110">
                <widget type="text" fieldname="numInsurance" />
            </column>
            <column name="name" order="110">
                <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre" />
                </widget>
            </column>
            <column name="birthDate" order="120">
                <widget type="date" fieldname="birthDate" />
            </column>
            <column name="allergies" order="130">
                <widget type="text" fieldname="allergies" />
            </column>
            <column name="familyHistory" order="140">
                <widget type="text" fieldname="familyHistory" />
            </column>
            <column name="personalHistory" order="150">
                <widget type="text" fieldname="personalHistory" />
            </column>
            <column name="oftalmolHistory" order="160">
                <widget type="text" fieldname="oftalmolHistory" />
            </column>
            <column name="observations" order="170">
                <widget type="text" fieldname="observations" />
            </column>
            <column name="mobile" order="180">
                <widget type="text" fieldname="telefono1" />
            </column>
            <column name="phone" order="190" display="none">
                <widget type="text" fieldname="telefono2" />
            </column>
            <column name="email" order="200" display="none">
                <widget type="text" fieldname="email" />
            </column>
            <column name="numExpedientes" order="210" display="none">
                <widget type="text" fieldname="numExpedientes" />
            </column>
        </group>
    </columns>

    <rows>
        <row type="status">
            <option color="success" fieldname="numexpedientes">gt:0</option>
        </row>
    </rows>
</view>
