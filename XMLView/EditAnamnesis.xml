<?xml version="1.0" encoding="UTF-8"?>
<view>

    <columns>
        <group name="header">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="id" readonly="true" />
            </column>
            <column name="idExpedient" display="none" order="110">
                <widget type="text" fieldname="idExpedient" readonly="true" />
            </column>
            <column name="idNoteType" display="none" order="120">
                <widget type="text" fieldname="idNoteType" readonly="true" />
            </column>
            <column name="idSpeciality" display="none" order="130">
                <widget type="text" fieldname="idSpeciality" readonly="true" />
            </column>
            <column name="creationDate" numcolumns="2" order="140">
                <widget type="date" fieldname="creationDate" required="true" />
            </column>
            <column name="creationTime" numcolumns="2" order="150">
                <widget type="time" fieldname="creationTime" required="true" />
            </column>
            <column name="modificationDate" numcolumns="2" order="160">
                <widget type="date" fieldname="modificationDate" required="true" />
            </column>
            <column name="modificationTime" numcolumns="2" order="170">
                <widget type="time" fieldname="modificationTime" required="true" />
            </column>
        </group>
        
        <column name="note" order="200">
            <widget type="textarea" fieldname="note" required="true" rows="2"/>
        </column>
    </columns>

</view>
